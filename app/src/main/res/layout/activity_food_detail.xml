<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp"
        tools:context=".FoodDetailActivity">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/lblName"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
              android:textColor="@android:color/black" android:padding="7dp"
              android:textSize="24sp" android:background="@drawable/shape_"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lblPrice" android:textColor="@android:color/black"
              android:textSize="24sp" android:background="@drawable/shape_" android:padding="7dp"
              app:layout_constraintTop_toBottomOf="@id/lblName" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lblAgeGroup" android:textColor="@android:color/black"
              android:textSize="24sp" android:background="@drawable/shape_" android:padding="7dp"
              app:layout_constraintTop_toBottomOf="@id/lblPrice" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lblSeason" android:textColor="@android:color/black"
              android:textSize="24sp" android:background="@drawable/shape_" android:padding="7dp"
              app:layout_constraintTop_toBottomOf="@id/lblAgeGroup" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/lblState" android:textColor="@android:color/black"
              android:textSize="24sp" android:background="@drawable/shape_" android:padding="7dp"
              app:layout_constraintTop_toBottomOf="@id/lblSeason" android:layout_marginTop="16dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>


</android.support.constraint.ConstraintLayout>